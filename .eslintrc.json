{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
    },
    "settings": {
      "import/resolver": {
        "alias": {
            "map": [
              ["models", "./sources/game/models/"],
              ["assets", "./sources/game/assets/"],
              ["components", "./sources/game/models/components/"],
              ["entities", "./sources/game/models/entities/"],
              ["lifecycles", "./sources/game/lifecycles/"],
              ["systems", "./sources/game/models/systems/"],
              ["debug", "./sources/debug"],
              ["editor", "./sources/editor/"],
              ["core", "./sources/theatre/core/"],
              ["modules", "./sources/theatre/modules/"]
            ],
            "extensions": [".ts", ".js", ".jsx", ".json"]
        }
      }
    }
}
